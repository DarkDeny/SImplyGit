<Window x:Class="SimplyGit.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SimplyGit.ViewModels"
        xmlns:views="clr-namespace:SimplyGit.Views"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" 
        Width="1000"
        d:DataContext="{Binding Source={d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=False}}"
        >

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:RepositoryViewModel}">
            <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
    </Window.Resources>
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Repositories">
                <MenuItem Header="_Add" Command="{Binding AddRepository}" />
                <Separator />
                <MenuItem Header="_Remove" Command="{Binding RemoveRepository}" />
                <Separator />
                <MenuItem Header="_Exit" Command="{Binding CloseApplication}"/>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ListBox
                Grid.Row="0"
                Grid.Column="0"
                Margin="10"
                ItemsSource="{Binding BookmarkedRepositories}"
                SelectedItem="{Binding SelectedRepository}"
                />

            <views:RepositoryDetailsView
                Grid.Column="1"
                Margin="10"
                DataContext="{Binding SelectedRepository}"
                />
        </Grid>
    </DockPanel>
</Window>